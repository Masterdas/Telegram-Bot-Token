echo -e "${GREEN}âœ” Bot Started...${NC}"

while true; do
    UPDATE=$(curl -s "$API_URL/getUpdates?offset=$((LAST_UPDATE_ID+1))")
    UPDATE_ID=$(echo "$UPDATE" | jq -r '.result[0].update_id // empty')
    MESSAGE=$(echo "$UPDATE" | jq -r '.result[0].message.text // empty')
    CHAT_ID=$(echo "$UPDATE" | jq -r '.result[0].message.chat.id // empty')

    if [ -n "$UPDATE_ID" ] && [ "$UPDATE_ID" -gt "$LAST_UPDATE_ID" ]; then
        LAST_UPDATE_ID=$UPDATE_ID

        if [[ "$MESSAGE" == "/start" ]]; then
